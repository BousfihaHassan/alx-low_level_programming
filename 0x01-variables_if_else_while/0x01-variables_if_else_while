#include <stdio.h>

/**
 * main - Entry point
 *
 * Description: Check if n variable is zero or positive or negative.
 *
 * Return: Always 0 (Success)
 */

int main(void)
{
    int n;

    if (n == 0)
    {
        printf("is zero");
    }
    else if (n > 0)
    {
        printf("is positive");
    }
    else
    {
        printf("is negative");
    }

    return (0);
}
